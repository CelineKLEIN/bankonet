package ihm;

import java.sql.SQLException;
import java.util.Scanner;

import com.bankonet.Client;

public class RechercheUnPrenomClientCommand extends IhmCommand {

	@Override
	public Integer getId() {
		// TODO Auto-generated method stub
		return 5;
	}

	@Override
	public String getLibelle() {
		// TODO Auto-generated method stub
		return "Recherche d'un client par prénom";
	}

	@Override
	void execute() throws SQLException {
	
		Scanner sc = new Scanner(System.in);
		String prenom;
		
		System.out.println("Rechercher le prénom souhaité");
		prenom = sc.nextLine();
		
		Client c = clientService.rechercherClientPrenom(prenom);
		System.out.println(c.toString());
		
	}

	
}
